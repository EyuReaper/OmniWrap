// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String?
  connections  Json?    // Stores encrypted OAuth tokens/connections
  preferences  Json?
  wraps        Wrap[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Wrap {
  id        String   @id @default(uuid())
  userId    String
  year      Int
  data      Json     // Aggregated wrap data
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
}